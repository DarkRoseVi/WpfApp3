<Page x:Class="WpfApp3.MyPage.PersonalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.MyPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PersonalPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130*"/>
            <RowDefinition Height="227*"/>
            <RowDefinition Height="93*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock  Text="Информация для пропуска" Style="{StaticResource MeTextBlock}" Width="300"></TextBlock>
            <StackPanel Orientation="Vertical">
                <TextBlock Text=" Срок действия заявки"></TextBlock>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="с" Margin="5"></TextBlock>
                    <TextBox Style="{StaticResource MeTextBox}"></TextBox>
                    <TextBlock Text="по" Margin="5"></TextBlock>
                    <TextBox Style="{StaticResource MeTextBox}"></TextBox>
               
                </StackPanel>
                <TextBlock Text="цель посещения"></TextBlock>
                <ComboBox Margin="10"></ComboBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
